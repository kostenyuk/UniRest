
Функция __Число(Значение = 0) Экспорт
	
	Если (ТипЗнч(Значение) = Тип("Дата")) Тогда
		Возврат Значение - '00010101000000';
	КонецЕсли;
	
КонецФункции

Функция __Дата(Значение = '00010101000000') Экспорт
	
	Если (ТипЗнч(Значение) = Тип("Число")) Тогда
		Возврат '00010101000000' + Значение;
	КонецЕсли;
	
КонецФункции

Функция __Знач(Знач Значение) Экспорт
	
	// Независимо от флага "Знач" структура передается как ссылка.
	
	Возврат Значение;
	
КонецФункции
